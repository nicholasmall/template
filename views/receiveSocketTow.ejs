<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <style>
        #mess {
            text-align: center
        }
    </style>
</head>
<body>
<div id="mess"></div>

<script>
    let mess = document.getElementById("mess");
    if (window.WebSocket) {
        let ws = new WebSocket('ws://localhost:3001');

        ws.onopen = function (e) {
            console.log("连接服务器成功");
            ws.send(JSON.stringify({state: 1, sendee: "receive2"}));
        }
        ws.onclose = function (e) {
            console.log("服务器关闭");
        }
        ws.onerror = function () {
            console.log("连接出错");
        }

        ws.onmessage = function (e) {
            const time = new Date();
            mess.innerHTML += time + "的消息：" + e.data + "<br>"
        }
    }
</script>
</body>
</html>